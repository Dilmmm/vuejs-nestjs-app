generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Utilisateur {
  Id               Int      @id @default(autoincrement())
  pseudo           String
  email            String   @unique
  mot_de_passe     String
  prenom           String
  nom              String
  date_inscription DateTime
  actif            Boolean  @default(false)
}

model Categorie {
  Id       Int       @id @default(autoincrement())
  nom      String
  produits Produit[]
}

model Produit {
  Id             Int       @id @default(autoincrement())
  nom            String
  description    String
  image          String
  categorie_id   Int
  categorie      Categorie @relation(fields: [categorie_id], references: [Id])
  recetteProduits RecetteProduit[]
}

model Recette {
  Id             Int       @id @default(autoincrement())
  nom            String
  description    String
  image          String
  recetteProduits RecetteProduit[]
  commentaires   Commentaire[]
}

model RecetteProduit {
  recette_id   Int
  produit_id   Int
  produit      Produit   @relation(fields: [produit_id], references: [Id])
  recette      Recette   @relation(fields: [recette_id], references: [Id])

  @@id([recette_id, produit_id])
}

model Commentaire {
  Id          Int       @id @default(autoincrement())
  auteur      String
  titre       String
  texte       String
  recette_id  Int
  note        Int
  recette     Recette   @relation(fields: [recette_id], references: [Id])
}